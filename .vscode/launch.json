	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Client",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"ClientApplication"
			]
		},
		{
			"name": "Debug Camera",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"CameraApplication"
			]
		},
		{
			"name": "Debug Build",
			"type": "lua-local",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/Build.lua",
			]
		},
		{
			"name": "Build Client",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/Build.lua",
				"--Target=Client"
			]
		},
		{
			"name": "Build Camera",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/Build.lua",
				"--Target=Camera"
			]
		},
		{
			"name": "Build All",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/Build.lua",
				"--Target=All"
			]
		}
	],

	"compounds": [
		{
			"name": "Debug All",
			"configurations": ["Debug Client", "Debug Camera"]
		}
	]
}