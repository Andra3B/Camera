	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Client",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"ClientApplication"
			]
		},
		{
			"name": "Debug Camera",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"CameraApplication"
			]
		},
		{
			"name": "Debug Sandbox",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"SandboxApplication"
			]
		},
		{
			"name": "Debug Build",
			"type": "lua-local",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/Build.lua",
				"--Target=${input:TargetInput}",
				"--LoveFolder=\"${input:LoveFolderInput}\"",
				"--LibAVFolder=\"${input:LibAVFolderInput}\""
			]
		}
	],

	"inputs": [
		{
			"id": "TargetInput",
			"type": "promptString",
			"description": "Enter name target name",
			"default": "All"
		},
		{
			"id": "LoveFolderInput",
			"type": "promptString",
			"description": "Enter path to the Love2D folder",
			"default": "C:/Program Files/Love2D"
		},
		{
			"id": "LibAVFolderInput",
			"type": "promptString",
			"description": "Enter path to the LibAV folder",
			"default": "C:/Program Files/ffmpeg/bin"
		}
	],

	"compounds": [
		{
			"name": "Debug Camera And Client",
			"configurations": ["Debug Client", "Debug Camera"]
		}
	]
}