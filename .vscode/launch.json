{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Client",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"Client"
			]
		},
		{
			"name": "Debug Camera",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"Camera"
			]
		},
		{
			"name": "Debug Sandbox",
			"type": "lua-local",
			"request": "launch",
			"program": {
				"command": "love"
			},
			"args": [
				"${workspaceFolder}",
				"Sandbox"
			]
		},
		{
			"name": "Build libav",
			"type": "lua-local",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": {
				"command": "luajit"
			},
			"args": [
				"${workspaceFolder}/libav/Build.lua"
			]
		}
	],

	"inputs": [
		{
			"id": "TargetInput",
			"type": "promptString",
			"description": "Enter name target name",
			"default": "All"
		},
		{
			"id": "LoveFolderInput",
			"type": "promptString",
			"description": "Enter path to the Love2D folder",
			"default": "D:/Love2D"
		},
		{
			"id": "LibAVFolderInput",
			"type": "promptString",
			"description": "Enter path to the LibAV folder",
			"default": "D:/ffmpeg/bin"
		}
	],

	"compounds": [
		{
			"name": "Debug Camera And Client",
			"configurations": ["Debug Client", "Debug Camera"]
		},
	]
}